{
  "variables": {
    "build_version": "{{env `BUILD_VERSION`}}",
    "source_ami": "",
    "instance_type": "",
    "instance_name": "{{env `BUILD_INSTANCE_NAME`}}",
    "vpc_id": "{{env `BUILD_VPC_ID`}}",
    "subnet_id": "{{env `BUILD_SUBNET_ID`}}",
    "region": "eu-west-1",
    "ami_name": "",
    "ami_description": "",
    "build_user": "{{env `BUILD_TEMP_USER`}}",
    "build_user_password": "{{env `BUILD_TEMP_USER_PASSWORD`}}",
    "admin_password": "{{env `BUILD_ADMIN_PASSWORD`}}"
  },
  "builders": [
    {
      "type": "amazon-ebs",
      "name": "base-ami",
      "communicator": "winrm",
      "winrm_username": "Administrator",
      "winrm_port": 5985,
      "winrm_timeout": "30m",
      "winrm_use_ssl": false,
      "winrm_insecure": true,
      "ami_name": "base-{{user `build_version`}}",
      "ami_description": "{{user `ami_description`}}",
      "source_ami": "{{user `source_ami`}}",
      "instance_type": "{{user `instance_type`}}",
      "region": "{{user `region`}}",
      "vpc_id": "{{user `vpc_id`}}",
      "subnet_id": "{{user `subnet_id`}}",
      "security_group_ids": [
        "sg-3747d450"
      ],
      "user_data_file": "./scripts/aws/user-data",
      "associate_public_ip_address": true,
      "ssh_private_ip": false,
      "force_deregister": true,
      "ami_block_device_mappings": [
        {
          "device_name": "/dev/sda1",
          "encrypted": true,
          "volume_size": 80,
          "volume_type": "gp2",
          "delete_on_termination": true
        },
        {
          "device_name": "xvdf",
          "encrypted": true,
          "volume_size": 20,
          "volume_type": "gp2",
          "delete_on_termination": true
        }
      ],
      "run_tags": {
          "Name": "{{user `instance_name`}}"
      }
    }
  ],
  "provisioners": [
    {
      "type": "powershell",
      "scripts": [
        "./scripts/common/provision-core.ps1"
      ]
    },
    {
      "type": "powershell",
      "script": "./scripts/common/provision-build-user.ps1",
      "environment_vars": [
        "BUILD_USER={{user `build_user`}}",
        "BUILD_USER_PASSWORD={{user `build_user_password`}}"
      ]
    },
    {
      "type": "powershell",
      "inline": [
        "md c:\\tmp\\deploy\\ops",
        "md c:\\tmp\\deploy\\app",
        "md c:\\tmp\\packer",
        "md c:\\tmp\\boxstarter"
      ]
    },
    {
      "type": "file",
      "source": "/Users/deluxebrain/Repos/deluxebrain/play-packer-aws-provisioning/packer-pipeline/scripts/aws/DriveLetterConfig.xml",
      "destination": "C:\\tmp\\deploy\\ops\\DriveLetterConfig.xml"
    },
    {
      "type": "file",
      "source": "/Users/deluxebrain/Repos/deluxebrain/play-packer-aws-provisioning/MyProject/deploy",
      "destination": "C:\\tmp\\deploy\\app"
    },
    {
      "type": "file",
      "source": "/Users/deluxebrain/Repos/deluxebrain/play-packer-aws-provisioning/packer-pipeline/scripts/common/boxstarter.ps1",
      "destination": "C:\\tmp\\boxstarter\\boxstarter.ps1"
    },
    {
      "type": "powershell",
      "script": "./scripts/common/provision-boxstarter.ps1",
      "environment_vars": [
        "BUILD_USER={{user `build_user`}}",
        "BUILD_USER_PASSWORD={{user `build_user_password`}}"
      ]
    },
    {
      "type": "dsc",
      "configuration_name": "MyWebsite",
      "configuration_file": "../MyProject/dsc/manifests/MyConfig.psd1",
      "manifest_file": "../MyProject/dsc/manifests/MyWebsite.ps1",
      "working_dir": "c:\\tmp\\packer",
      "staging_dir": "c:\\tmp\\packer\\staging",
      "install_package_management": true,
      "install_modules": {
        "xWebAdministration": "1.11.0.0",
        "xNetworking": "2.9.0.0"
      },
      "configuration_params": {
        "-MachineName": "localhost",
        "-SourcePath": "c:\\tmp\\deploy\\app\\MyWebsite"
      }
    },
    {
      "type": "powershell",
      "scripts": [
        "./scripts/aws/ec2-config-ami.ps1"
      ]
    },
    {
      "type": "powershell",
      "script": "./scripts/aws/bake-admin-password.ps1",
      "environment_vars": [
        "ADMIN_PASSWORD={{user `admin_password`}}"
      ]
    }
  ]
}
